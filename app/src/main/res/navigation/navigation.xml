<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
        xmlns:tools="http://schemas.android.com/tools"
        app:startDestination="@id/wordDisplayFragment">

    <fragment
            android:id="@+id/wordDisplayFragment"
            android:name="com.yllxh.wordcollector.screens.worddisplay.WordDisplayFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_word_display"
            >
        <action
                android:id="@+id/action_wordDisplayFragment_to_lookUpFragment"
                app:destination="@id/lookUpFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/manageCategoriesFragment"
            android:name="com.yllxh.wordcollector.screens.managecategories.ManageCategoriesFragment"
            android:label="Manage Categories"
            tools:layout="@layout/fragment_manage_categories" />
    <fragment
            android:id="@+id/lookUpFragment"
            android:name="com.yllxh.wordcollector.screens.lookup.LookUpFragment"
            android:label="Look Up"
            tools:layout="@layout/fragment_look_up" >
        <argument
                android:name="url"
                app:argType="string" />
    </fragment>
</navigation>